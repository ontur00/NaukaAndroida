<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hipokryta.testlistview.MyGridView.MyDialogBox">


    <ImageView
        android:src="@drawable/stany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewFlagDialogBox"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="this flag belongs to"
        android:id="@+id/textViewDialogBox"
        android:layout_below="@+id/imageViewFlagDialogBox"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="finishActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:id="@+id/buttonFinishMyDialogBox"
        android:layout_below="@+id/textViewDialogBox"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
