<resources>
    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        ...
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="CustomActionBar"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">        
        <item name="android:background">#7F00ACAC</item>
        <!-- Support library compatibility -->
        <item name="background">@color/abc_search_url_text</item>

        <item name="android:titleTextStyle">@style/MyActionBarTitleTextColor</item>
        <item name="titleTextStyle">@style/MyActionBarTitleTextColor</item>

        <item name="android:windowActionBar">true</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleTextColor"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/abc_secondary_text_material_light</item>

    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/secondary_text_disabled_material_light</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBarCustomStyle"
        parent="Theme.AppCompat.Light">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColor">#7facacac</item>
    </style>
</resources>
